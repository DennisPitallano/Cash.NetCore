<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
    <ApplicationIcon>Cash.NetCore.ico</ApplicationIcon>
    <Description>BCH API Wrapper for .NetCore</Description>
    <Authors>Dennis Pitallano</Authors>
    <Copyright>Copyright Â© 2022 Oragon ðŸŒ¶</Copyright>
    <PackageProjectUrl>https://github.com/DennisPitallano/Cash.NetCore</PackageProjectUrl>
    <PackageIcon>Cash.NetCore.png</PackageIcon>
    <PackageReadmeFile>RELEASED.md</PackageReadmeFile>
    <RepositoryType>https://github.com/DennisPitallano/Cash.NetCore</RepositoryType>
    <PackageTags>.netcore,cash,ecash,crypto,api,wrapper,.net,blockchain,cryptocurrency,library,csharp,wrapper-api,bch,bitcoin-api,api,bitcoin cash, bitcoin</PackageTags>
    <PackageReleaseNotes>https://github.com/DennisPitallano/Cash.NetCore</PackageReleaseNotes>
    <RepositoryUrl>https://github.com/DennisPitallano/Cash.NetCore</RepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="Cash.NetCore.ico" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Configuration.Abstractions" Version="6.0.0" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Binder" Version="6.0.0" />
    <PackageReference Include="Microsoft.Extensions.Http" Version="6.0.0" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Models\Response\Mining\" />
    <Folder Include="Models\Response\Util\" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\RELEASED.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <None Update="Cash.NetCore.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
